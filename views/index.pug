extends layout

block content
  section
    div(class='row')
      div(class='col-xs-12')
        form(class='form-inline')
          div(class='form-group has-feedback col-xs-8 col-sm-6 col-md-4')
            label(class='sr-only', for='searchText') Enter an address or zip code
            input(type='text', id='searchText', class='form-control', placeholder='Enter an address or zip code')
          button(id='searchButton', class='btn btn-default col-xs-4 col-sm-3 col-md-2') Search

  section(id='mapSection')
    div(class='row')
      div(class='col-sm-8')
        div(id='mapDiv')
      div(class='col-sm-4 scroll')
        div(id='listResults')
block append scripts
  script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBNT3QFuwAljAQB2HbfIEAmGfDpJAy7vzg')
  script(src='/javascripts/index.js')